<article>
  <header>
    <h1><%= @movie.title %></h1>
  </header>
    <%= image_tag(@movie.image_file_name, :height =>"600", :width => "500") %>
  <h2>Description</h2>
  <p>
    <%= @movie.description %>
  </p>
  <h3>Rating</h3>
  <p>
    <%= @movie.rating %>
  </p>
  <h3>Released On</h3>
  <p>
    <%= @movie.released_on %>
  </p>
  <h3>Total Gross</h3>
  <p>
    <%= format_total_gross(@movie) %>
  </p>
  <h3>Cast</h3>
<p>
  <%= @movie.cast %>
</p>

<h3>Director</h3>
<p>
  <%= @movie.director %>
</p>

<h3>Duration</h3>
<p>
  <%= @movie.duration %>
</p>
  
  <footer>
    <p>
      <%= link_to 'View All Reviews', movie_reviews_path(@movie) %>
    </p>
    <p>
      <%= link_to "Write Review", new_movie_review_path(@movie), 
                class: 'button ok review' %>
    </p>
    <nav>
      <%= link_to 'Edit', edit_movie_path(@movie), class: 'button' %>
      <%= link_to 'Delete', @movie, 
                  class: 'button',
                  method: :delete, data: { confirm: 'Are you sure?' } %>
    </nav>
  </footer>
</article>
